# ============================
# .env.production
# สำหรับ Production Deployment ใน subdirectory
# ============================

# API Configuration
VITE_API_URL=https://sertjerm.com/mykids-api/api.php

# App Configuration
VITE_APP_NAME=MyKids
VITE_APP_VERSION=3.1.0
VITE_APP_ENV=production

# Build Configuration
NODE_ENV=production
VITE_BASE_PATH=/mykids

# Debugging (ปิดใน production)
VITE_DEBUG=true
VITE_CONSOLE_LOGS=false

# ============================
# .env.development
# สำหรับ Development 
# ============================

# API Configuration (ใช้ production API)
VITE_API_URL=https://sertjerm.com/mykids-api/api.php

# App Configuration
VITE_APP_NAME=MyKids Dev
VITE_APP_VERSION=3.1.0-dev
VITE_APP_ENV=development

# Build Configuration
NODE_ENV=development
VITE_BASE_PATH=/

# Debugging (เปิดใน development)
VITE_DEBUG=true
VITE_CONSOLE_LOGS=true

# ============================
# .env.local
# สำหรับ Override local development
# สร้างไฟล์นี้ถ้าต้องการแก้ไขค่าเฉพาะเครื่อง
# ============================

# หากต้องการทดสอบ subdirectory ใน local
# VITE_BASE_PATH=/mykids
# NODE_ENV=production

# หากมี API local
# VITE_API_URL=http://localhost/my-kids-api/api.php

# เปิด debug เต็ม
VITE_DEBUG=true
VITE_CONSOLE_LOGS=true

# ============================
# .env (Default fallback)
# ============================

# Default configuration
VITE_APP_NAME=MyKids
VITE_APP_VERSION=3.1.0
VITE_API_URL=https://sertjerm.com/mykids-api/api.php
VITE_DEBUG=false